<div class="row">
  <div class="span6">

    <%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), html: {class: "well form-horizontal"}) do |f| %>
      <%= devise_error_messages! %>

      <fieldset>
        <legend><h3 class="text-info">Sign up</h3></legend>

          <%= f.input :first_name %>
          <%= f.input :last_name %>
          <%= f.input :profile_name %>
          <%= f.input :email %>
          <%= f.input :password %>
          <%= f.input :password_confirmation %>

<!--           <div><%= f.label :password %><br />
          <%= f.password_field :password %></div>

          <div><%= f.label :password_confirmation %><br />
          <%= f.password_field :password_confirmation %></div> -->

          <div><%= f.button :submit, "Sign up", class: "btn btn-primary" %></div>

        </fieldset>

        <% end %>
     
    <%= render "devise/shared/links" %>

  </div>
  <div class="span6">
    <h3 class="text-info">Register</h3>
    <p class="lead muted">
