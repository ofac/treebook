
<div class="row">
	<div class="span4">
		<%= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name), html: {class: "well"} ) do |f| %>
		  <fieldset>
		  	<legend><h3 class="text-info">Sign in</h3></legend>
		  	
			  <%= f.input :email %>
			  <%= f.input :password %>

			  <% if devise_mapping.rememberable? -%>
			    <div><%= f.input :remember_me, as: :boolean %></div>
			  <% end -%>

			  <div><%= f.button :submit, "Sign in", class: "btn btn-primary" %></div>
		  </fieldset>
		<% end %>

		<%= render "devise/shared/links" %>
	</div>
	<div class="span8">
		<h3 class="text-info">Signing in is easy and secure</h3>
		<p class="lead muted">
			Lorem ipsum dolor sit amet, consectetur adipisicing elit. Porro, tempora, molestiae, debitis consectetur ipsum deleniti suscipit asperiores aperiam animi rem ullam commodi doloribus consequuntur esse possimus voluptatum iure. Impedit, soluta.
		</p>
	</div>
</div>